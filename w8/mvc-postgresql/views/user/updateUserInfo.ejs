<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Update User Info</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
			crossorigin="anonymous"
		/>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
			integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		/>
	</head>
	<style>
		* {
			box-sizing: border-box;
			padding: 0;
			margin: 0;
		}
	</style>
	<body>
		<div class="container-fluid">
			<%- include('../navbar.ejs') %>
			<h3 class="mt-2">Update User Info</h3>
			<div
				class="container-fluid rounded-3 mt-3"
				style="border: 1px solid #ccc"
			>
				<div class="mt-3" style="width: 750px; margin: 0 auto">
					<form method="post" action="/user" onsubmit="return false;">
						<div class="mb-3 row d-flex align-items-center">
							<label for="first_name" class="col-sm-2 text-end"
								>First Name</label
							>
							<div class="col-sm-8">
								<input
									type="text"
									class="form-control w-100"
									placeholder="First Name"
									id="first_name"
									name="first_name"
									value="<%= user.first_name %>"
									required
								/>
							</div>
						</div>
						<div class="mb-3 row d-flex align-items-center">
							<label for="last_name" class="col-sm-2 text-end"
								>Last Name</label
							>
							<div class="col-sm-8">
								<input
									type="text"
									class="form-control w-100"
									placeholder="Last Name"
									id="last_name"
									name="last_name"
									value="<%= user.last_name %>"
									required
								/>
							</div>
						</div>
						<div class="mb-3 row d-flex align-items-center">
							<label for="email" class="col-sm-2 text-end"
								>Email address</label
							>
							<div class="col-sm-8">
								<input
									type="email"
									class="form-control w-100"
									placeholder="Enter email"
									id="email"
									name="email"
									required
									value="<%= user.email %>"
								/>
							</div>
						</div>
						<div class="mb-3 row d-flex align-items-center">
							<label for="avatar" class="col-sm-2 text-end"
								>Avatar</label
							>
							<div class="col-sm-8">
								<input
									type="text"
									class="form-control w-100"
									placeholder="Enter url"
									value="<%= user.avatar %>"
									id="avatar"
									name="avatar"
								/>
							</div>
						</div>
						<div class="row mb-3 d-flex align-items-center">
							<div class="col-sm-2"></div>
							<div class="col-sm-8">
								<button
									type="submit"
									onclick="updateUserInfo()"
									class="btn btn-primary rounded-3"
								>
									Update
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
		<script>
			function updateUserInfo() {
				const userId = '<%= user.id %>';
				const first_name = document.getElementById('first_name').value;
				const last_name = document.getElementById('last_name').value;
				const email = document.getElementById('email').value;
				const avatar = document.getElementById('avatar').value;

				// Clear the form
				document.getElementById('first_name').value = '';
				document.getElementById('last_name').value = '';
				document.getElementById('avatar').value = '';
				document.getElementById('email').value = '';

				fetch(`/user/${userId}`, {
					method: 'PATCH',
					headers: {
						'Content-Type': 'application/json',
					},
					body: JSON.stringify({
						id: userId,
						first_name: first_name,
						last_name: last_name,
						email: email,
						avatar: avatar,
					}),
				})
					.then(async (response) => {
						const data = await response.json();
						alert(data.message);
						window.location.href = '/';
					})
					.catch((error) => {
						console.error(
							'There was a problem with the request:',
							error
						);
					});
			}
		</script>
	</body>
</html>
